<!-- MainWindow.xaml -->
<Window x:Class="EngUzbEssential.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngUzbEssential"
        mc:Ignorable="d"
        Title="EngUzbEssential" Height="650" Width="1200"
        WindowStyle="None" 
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#24284A"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#D1434B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#24284A"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#24284A"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="4">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F8F8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#FFEDB3" CornerRadius="10" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Border Margin="20" Background="White" CornerRadius="24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Content Section -->
                    <Grid Margin="40,30,0,30" Grid.Column="0">
                        <!-- Top Navigation -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <!-- User Profile Button -->
                            <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="0" Click="UserProfileButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" Padding="5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F5F5F5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="18" Margin="0,0,8,0">
                                        <Border.Background>
                                            <ImageBrush ImageSource="/Assets/Images/image6.jpg" Stretch="UniformToFill"/>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect Color="#AAAAAA" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                                        </Border.Effect>
                                    </Border>
                                    <TextBlock Text="John Smith" VerticalAlignment="Center" Foreground="#24284A" 
                                               FontWeight="SemiBold" FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <StackPanel Orientation="Horizontal" Margin="50,0,0,0">
                                <Button Content="HOME" Style="{StaticResource MenuButtonStyle}" Margin="0,0,20,0" FontWeight="Bold" Click="HomeButton_Click"/>
                                <Button Content="LEARN" Style="{StaticResource MenuButtonStyle}" Margin="0,0,20,0" Click="LearnButton_Click"/>
                                <Button Content="GAMES" Style="{StaticResource MenuButtonStyle}" Margin="0,0,20,0" Click="GamesButton_Click"/>
                                <Button Content="LEADERBOARD" Style="{StaticResource MenuButtonStyle}" Margin="0,0,20,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Content Frame to display pages -->
                        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,40,0,0"/>

                        <!-- Home Content - Will be hidden when navigating to other pages -->
                        <Grid x:Name="HomeContent">
                            <!-- Decorative Elements -->
                            <Ellipse Width="20" Height="20" Fill="#D1434B" Opacity="0.7" Margin="400,200,0,0"/>
                            <Path Data="M 0,0 L 10,10 L 0,10 Z" Fill="#24284A" Margin="300,100,0,0"/>
                            <Ellipse Width="12" Height="12" Fill="#24284A" Opacity="0.7" Margin="150,350,0,0"/>
                            <Path Data="M 0,0 L 10,10 L 0,10 Z" Fill="#D1434B" Margin="450,300,0,0"/>

                            <!-- Main Content -->
                            <StackPanel VerticalAlignment="Center" Margin="0,50,40,0">
                                <TextBlock Text="English-Uzbek" FontSize="72" FontWeight="Bold" Foreground="#24284A"
                                        FontFamily="Comic Sans MS" Width="538"/>
                                <TextBlock Text="Essential" FontSize="72" FontWeight="Bold" Foreground="#24284A" 
                                        Margin="0,-20,0,20" FontFamily="Comic Sans MS" Width="538"/>

                                <TextBlock Text="Learning a language opens doors to enhanced communication, cultural understanding, and cognitive benefits, ultimately enriching personal and professional lives by expanding opportunities and fostering empathy. " 
                                        Foreground="#666A7A" TextWrapping="Wrap" MaxWidth="450" Margin="0,0,73,30" Width="463"/>

                                <!-- Get Started Button -->
                                <Button Style="{StaticResource ActionButtonStyle}" HorizontalAlignment="Left" Width="160" Click="Button_Click" Margin="20,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Get Started" FontWeight="SemiBold"/>
                                        <Path Data="M0,0 L8,8 L0,16" Stroke="#24284A" StrokeThickness="2" 
                                            VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Decorative Side Elements -->
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0,150,0,0">
                                <Line X1="0" Y1="0" X2="0" Y2="200" Stroke="#24284A" StrokeThickness="1" Opacity="0.5"/>
                                <TextBlock Text="ENG-UZB ESSENTIAL" Foreground="#24284A" 
                                        FontSize="10" FontWeight="SemiBold" Margin="0,17,3,0">
                                    <TextBlock.LayoutTransform>
                                        <RotateTransform Angle="-90"/>
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                                <Line X1="0" Y1="0" X2="0" Y2="200" Stroke="#24284A" StrokeThickness="1" Opacity="0.5" Margin="0,20,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Right Image Section -->
                    <Grid Grid.Column="1" Width="500" x:Name="RightPanel">
                        <Border>
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/Images/image1.jpg" Stretch="UniformToFill"/>
                            </Border.Background>
                        </Border>

                        <!-- Spider Web Pattern -->
                        <Path Stroke="#D1434B" StrokeThickness="0.5" Opacity="0.8" 
                              Data="M 500,0 C 400,100 300,150 200,200 C 100,250 50,300 0,400 M 500,50 C 400,125 300,175 200,225 C 100,275 50,325 0,425 M 500,100 C 400,150 300,200 200,250 C 100,300 50,350 0,450 M 500,150 C 400,175 300,225 200,275 C 100,325 50,375 0,475 M 0,0 C 100,100 200,150 300,200 C 400,250 450,300 500,400 M 0,50 C 100,125 200,175 300,225 C 400,275 450,325 500,425 M 0,100 C 100,150 200,200 300,250 C 400,300 450,350 500,450 M 0,150 C 100,175 200,225 300,275 C 400,325 450,375 500,475"/>


                        <!-- Close Button -->
                        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" 
                                Click="CloseButton_Click" Width="32" Height="32" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#33000000"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="ButtonBorder" 
                                                        Background="{TemplateBinding Background}" 
                                                        CornerRadius="16"
                                                        BorderThickness="0">
                                                    <Border.Effect>
                                                        <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.3" Color="Black"/>
                                                    </Border.Effect>
                                                    <Grid>
                                                        <Path x:Name="CrossPath" 
                                                              Data="M 10,10 L 22,22 M 22,10 L 10,22" 
                                                              Stroke="{TemplateBinding Foreground}" 
                                                              StrokeThickness="1.5"
                                                              StrokeEndLineCap="Round"
                                                              StrokeStartLineCap="Round"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center">
                                                            <Path.RenderTransform>
                                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                            </Path.RenderTransform>
                                                        </Path>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E53935"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter TargetName="CrossPath" Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#C62828"/>
                                                        <Setter TargetName="ButtonBorder" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect ShadowDepth="0" BlurRadius="2" Opacity="0.2" Color="Black"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <!-- Add transitions for smoother hover effects -->
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>