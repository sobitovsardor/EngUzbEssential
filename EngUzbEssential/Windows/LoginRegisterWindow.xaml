<Window x:Class="EngUzbEssential.Windows.LoginRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngUzbEssential.Windows"
        mc:Ignorable="d"
        Title="Login / Register" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666A7A"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#4285F4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4285F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3367D6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Styles -->
        <Style x:Key="ModernTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#4285F4" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4285F4" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="{x:Type PasswordBox}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#4285F4" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4285F4" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#E5E5E5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Window Header with Close Button -->
            <Grid Height="36" Background="#4285F4">
                <Grid.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="5" Opacity="0.3" Direction="270"/>
                </Grid.Effect>
                <TextBlock Text="EngUzbEssential" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <Button x:Name="CloseButton" HorizontalAlignment="Right" Width="36" Height="36" Background="Transparent" BorderThickness="0">
                    <Path Data="M 0,0 L 10,10 M 0,10 L 10,0" Stroke="White" StrokeThickness="1.5"/>
                </Button>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tab Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="LoginTabButton" Content="Login" Style="{StaticResource TabButtonStyle}"/>
                    <Button x:Name="RegisterTabButton" Grid.Column="1" Content="Register" Style="{StaticResource TabButtonStyle}"/>
                    
                    <Border x:Name="LoginTabIndicator" Height="2" Background="#4285F4" VerticalAlignment="Bottom" Width="70" HorizontalAlignment="Center"/>
                    <Border x:Name="RegisterTabIndicator" Grid.Column="1" Height="2" Background="#4285F4" VerticalAlignment="Bottom" Width="70" HorizontalAlignment="Center" Opacity="0"/>
                </Grid>

                <!-- Login Panel -->
                <Grid x:Name="LoginPanel" Grid.Row="1" Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="Email" Margin="0,0,0,5" Foreground="#444444"/>
                        <TextBox x:Name="LoginEmail" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                        <TextBlock Text="Password" Margin="0,0,0,5" Foreground="#444444"/>
                        <PasswordBox x:Name="LoginPassword" Style="{StaticResource ModernPasswordBox}" Margin="0,0,0,5"/>

                        <TextBlock Text="Forgot password?" Foreground="#4285F4" HorizontalAlignment="Right" Cursor="Hand" Margin="0,0,0,25"/>

                        <Button x:Name="LoginButton" Content="Login" Style="{StaticResource ActionButtonStyle}"/>

                        <TextBlock Text="Or continue with" Foreground="#666A7A" HorizontalAlignment="Center" Margin="0,25,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Content="Google" Background="White" Foreground="#444444" BorderThickness="1" BorderBrush="#DDDDDD" Height="40" Margin="0,0,5,0"/>
                            <Button Content="Facebook" Grid.Column="1" Background="White" Foreground="#444444" BorderThickness="1" BorderBrush="#DDDDDD" Height="40" Margin="5,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- Register Panel -->
                <Grid x:Name="RegisterPanel" Grid.Row="1" Margin="0,30,0,0" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Name" Margin="0,0,0,5" Foreground="#444444"/>
                        <TextBox x:Name="UserRegisterName" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                        <TextBlock Text="Email" Margin="0,0,0,5" Foreground="#444444"/>
                        <TextBox x:Name="RegisterEmail" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                        <TextBlock Text="Password" Margin="0,0,0,5" Foreground="#444444"/>
                        <PasswordBox x:Name="RegisterPassword" Style="{StaticResource ModernPasswordBox}" Margin="0,0,0,15"/>

                        <TextBlock Text="Confirm Password" Margin="0,0,0,5" Foreground="#444444"/>
                        <PasswordBox x:Name="RegisterConfirmPassword" Style="{StaticResource ModernPasswordBox}" Margin="0,0,0,25"/>

                        <Button x:Name="RegisterButton" Content="Register" Style="{StaticResource ActionButtonStyle}"/>

                        <TextBlock Margin="0,15,0,0" TextWrapping="Wrap" Foreground="#666A7A" FontSize="12" TextAlignment="Center">
                            By registering, you agree to our Terms of Service and Privacy Policy
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
