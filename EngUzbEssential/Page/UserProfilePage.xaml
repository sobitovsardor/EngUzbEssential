<!-- UserProfilePage.xaml -->
<Page x:Class="EngUzbEssential.Page.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EngUzbEssential.Page"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1200"
      Title="UserProfilePage">

    <Grid Background="#FDFAF0">
        <StackPanel Margin="40">
            <!-- Back button -->
            <Button Background="Transparent" BorderThickness="0" Cursor="Hand" 
                    Click="BackButton_Click" HorizontalAlignment="Left" Margin="0,10,0,30">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M12,0 L0,12 L12,24" Stroke="#24284A" StrokeThickness="2" 
                          VerticalAlignment="Center" Margin="0,0,10,0" Width="12" Height="24"/>
                    <TextBlock Text="BACK" Foreground="#24284A" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <TextBlock Text="USER PROFILE" FontSize="36" FontWeight="Bold" Foreground="#24284A" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>
            
            <!-- Simple Profile Info -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="John Smith" FontSize="24" FontWeight="Bold" Foreground="#24284A"/>
                    <TextBlock Text="This is a simplified user profile page for testing." 
                               Foreground="#666A7A" FontSize="16" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page> 