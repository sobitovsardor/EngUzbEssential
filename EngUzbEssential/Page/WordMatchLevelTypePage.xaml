<Page x:Class="EngUzbEssential.Page.WordMatchLevelTypePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EngUzbEssential.Page"
      mc:Ignorable="d" 
      d:DesignHeight="650"
      Title="Word Match Settings" Width="469">

    <Grid Background="#FDFAF0" Margin="10,10,0,42">
        <!-- Back Button -->
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" 
                Background="Transparent" BorderThickness="0" Cursor="Hand" Click="BackButton_Click">
            <StackPanel Orientation="Horizontal">
                <Path Data="M 10,0 L 0,10 L 10,20" Stroke="#24284A" StrokeThickness="2" 
                      VerticalAlignment="Center" Margin="5,0,5,0"
                      StrokeEndLineCap="Round" StrokeStartLineCap="Round"/>
                <TextBlock Text="BACK" FontSize="14" FontWeight="SemiBold" 
                           Foreground="#24284A" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
        </Button>

        <!-- Selection Panel -->
        <Border Background="White" CornerRadius="15" BorderThickness="1" BorderBrush="#EEEEEE" Margin="10,10,10,10">
            <Border.Effect>
                <DropShadowEffect Color="#DDDDDD" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel Margin="20">
                <!-- Level Title -->
                <TextBlock x:Name="LevelTitle" Text="Level 1" FontSize="28" Foreground="#24284A" Margin="0,0,0,20" FontWeight="Bold" HorizontalAlignment="Center"/>

                <!-- Test Type Selection -->
                <TextBlock Text="Select test of type:" FontSize="24" Foreground="#24284A" Margin="0,0,0,15" FontWeight="SemiBold"/>

                <Grid x:Name="EnglishToUzbekGrid" Tag="RadioButton" Margin="0,0,0,10" MouseDown="RadioButton_Checked">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Width="24" Height="24" Fill="#D1434B" Stroke="White" StrokeThickness="2"/>
                    <Ellipse Width="12" Height="12" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" Text="ENG - UZB" Foreground="#24284A" FontSize="18" FontWeight="SemiBold" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </Grid>

                <Grid x:Name="UzbekToEnglishGrid" Tag="RadioButton" Margin="0,0,0,25" MouseDown="RadioButton_Checked">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Width="24" Height="24" Fill="Transparent" Stroke="#BBBBBB" StrokeThickness="2"/>

                    <TextBlock Grid.Column="1" Text="UZB - ENG" Foreground="#666A7A" FontSize="18" FontWeight="SemiBold" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </Grid>

                <!-- Difficulty Categories -->
                <TextBlock Text="Choose one of the categories:" FontSize="22" Foreground="#24284A" Margin="0,0,0,15" FontWeight="SemiBold"/>

                <Grid x:Name="EasyGrid" Tag="RadioButton" Margin="0,0,0,10" MouseDown="RadioButton_Checked">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Width="24" Height="24" Fill="#D1434B" Stroke="White" StrokeThickness="2"/>
                    <Ellipse Width="12" Height="12" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" Text="Easy(time: 240s; coin: 1pt)" Foreground="#24284A" FontSize="18" FontWeight="SemiBold" Margin="15,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center"/>
                </Grid>

                <Grid x:Name="MediumGrid" Tag="RadioButton" Margin="0,0,0,10" MouseDown="RadioButton_Checked">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Width="24" Height="24" Fill="Transparent" Stroke="#BBBBBB" StrokeThickness="2"/>

                    <TextBlock Grid.Column="1" Text="Medium(time: 120s; coin: 2pt)" Foreground="#666A7A" FontSize="18" FontWeight="SemiBold" Margin="15,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center"/>
                </Grid>

                <Grid x:Name="ExpertGrid" Tag="RadioButton" Margin="0,0,0,15" MouseDown="RadioButton_Checked">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Width="24" Height="24" Fill="Transparent" Stroke="#BBBBBB" StrokeThickness="2"/>

                    <TextBlock Grid.Column="1" Text="Expert(time: 60s; coin: 3pt)" Foreground="#666A7A" FontSize="18" FontWeight="SemiBold" Margin="15,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center"/>
                </Grid>

                <!-- OK Button -->
                <Button HorizontalAlignment="Right" Width="100" Height="45" Margin="0,10,0,0" Background="#24284A" Foreground="White" FontSize="20" FontWeight="SemiBold" BorderThickness="0" Content="Ok" Click="OkButton_Click" RenderTransformOrigin="0.502,1.467">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D1434B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

        <!-- Input Box -->

    </Grid>
</Page>
