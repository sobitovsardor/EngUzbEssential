<Page x:Class="PolyglotEssential.Desktop.Page.WordMatchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PolyglotEssential.Desktop.Page"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1200"
      Title="WordMatchPage">

    <Page.Resources>
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="230"/>
            <Setter Property="Height" Value="230"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect Color="#DDDDDD" BlurRadius="15" ShadowDepth="5" Opacity="0.4"/>
                            </Border.Effect>
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F8F8"/>
                                <Setter Property="BorderBrush" Value="#D1434B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Background="#FDFAF0" CornerRadius="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40">
                    <Grid Margin="0,10,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="BackButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M 10,0 L 0,10 L 10,20" Stroke="#24284A" StrokeThickness="2" 
                                      VerticalAlignment="Center" Margin="5,0,5,0"
                                      StrokeEndLineCap="Round" StrokeStartLineCap="Round"/>
                                <TextBlock Text="BACK" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="#24284A" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Grid.Column="1" Text="WORD MATCH" FontSize="36" FontWeight="Bold" Foreground="#24284A" VerticalAlignment="Center"
                                   HorizontalAlignment="Center" Width="273"/>
                    </Grid>

                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Button 1: Animals -->
                        <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource CategoryButtonStyle}" Click="AnimalsButton_Click">
                            <StackPanel>
                                <Border Width="120" Height="120" Margin="0,0,0,15" CornerRadius="60">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Assets/Images/image1.jpg" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                                <TextBlock Text="Animals" FontSize="20" FontWeight="SemiBold" Foreground="#24284A" HorizontalAlignment="Center"/>
                                <TextBlock Text="Match animal words" FontSize="14" Foreground="#666A7A" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Button 2: Food -->
                        <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource CategoryButtonStyle}" Click="FoodButton_Click">
                            <StackPanel>
                                <Border Width="120" Height="120" Margin="0,0,0,15" CornerRadius="60">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Assets/Images/image2.jpg" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                                <TextBlock Text="Food" FontSize="20" FontWeight="SemiBold" Foreground="#24284A" HorizontalAlignment="Center"/>
                                <TextBlock Text="Match food words" FontSize="14" Foreground="#666A7A" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Button 3: Colors -->
                        <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource CategoryButtonStyle}" Click="ColorsButton_Click">
                            <StackPanel>
                                <Border Width="120" Height="120" Margin="0,0,0,15" CornerRadius="60">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Assets/Images/image3.jpg" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                                <TextBlock Text="Colors" FontSize="20" FontWeight="SemiBold" Foreground="#24284A" HorizontalAlignment="Center"/>
                                <TextBlock Text="Match color words" FontSize="14" Foreground="#666A7A" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Button 4: Numbers -->
                        <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource CategoryButtonStyle}" Click="NumbersButton_Click">
                            <StackPanel>
                                <Border Width="120" Height="120" Margin="0,0,0,15" CornerRadius="60">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Assets/Images/image4.jpg" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                                <TextBlock Text="Numbers" FontSize="20" FontWeight="SemiBold" Foreground="#24284A" HorizontalAlignment="Center"/>
                                <TextBlock Text="Match number words" FontSize="14" Foreground="#666A7A" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Button 5: Family -->
                        <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource CategoryButtonStyle}" Click="FamilyButton_Click">
                            <StackPanel>
                                <Border Width="120" Height="120" Margin="0,0,0,15" CornerRadius="60">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Assets/Images/image5.jpg" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                                <TextBlock Text="Family" FontSize="20" FontWeight="SemiBold" Foreground="#24284A" HorizontalAlignment="Center"/>
                                <TextBlock Text="Match family words" FontSize="14" Foreground="#666A7A" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Button 6: Weather -->
                        <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource CategoryButtonStyle}" Click="WeatherButton_Click">
                            <StackPanel>
                                <Border Width="120" Height="120" Margin="0,0,0,15" CornerRadius="60">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Assets/Images/image6.jpg" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                                <TextBlock Text="Weather" FontSize="20" FontWeight="SemiBold" Foreground="#24284A" HorizontalAlignment="Center"/>
                                <TextBlock Text="Match weather words" FontSize="14" Foreground="#666A7A" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
